<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_template_form" model="ir.ui.view">
      <field name="name">product.template.form</field>
      <field name="model">product.template</field>
      <!-- MODE PRIMARY -->
      <field name="mode">primary</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
      <!-- Ada 2 cara, xpath dan field -->
      <!-- fieldname name nya itu target nya dimana, name dari field yang di inherit  -->
        <!-- <field name="barcode" position="after">
            <field name="custom_barcode" />
        </field> -->
        <!-- xpath -->
        <xpath expr="//field[@name='barcode']" position="after">
            <field name="custom_barcode"  />
        </xpath>
      </field>
    </record>

    <record id="action_product_template_primary" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <!-- Action view adalah view yang akan jadi list view, jadi kalau action nya di klik diarahin kesini -->

    <record id="product_template_kanban_view_act" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="product.product_template_kanban_view" />
        <field name="act_window_id" ref="action_product_template_primary" />
    </record>

    <record id="product_template_form_view_act" model="ir.actions.act_window.view">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_template_form" />
        <field name="act_window_id" ref="action_product_template_primary" />
    </record>

    <menuitem name="Product Template" id="product_template_menu_data"  action="action_product_template_primary" parent="odoo_project.odoo_project_menu_root"/>
</odoo>
